{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "paths": {
      "rxjs-ai": ["../src/index.ts"],
      "rxjs-ai/*": ["../src/*"]
    }
  },
  "include": ["src"]
}
